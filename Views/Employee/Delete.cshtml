@model project1.Models.Employee

<h2 class="text-center my-4">Delete Employee</h2>

<h3 class="text-danger text-center">Are you sure you want to delete this employee?</h3>

<div class="container">
    <h4>Employee Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>

        <dt class="col-sm-2">
            Position
        </dt>
        <dd class="col-sm-10">
            @Model.Position
        </dd>

        <dt class="col-sm-2">
            Department
        </dt>
        <dd class="col-sm-10">
            @Model.Department
        </dd>

        <dt class="col-sm-2">
            Salary
        </dt>
        <dd class="col-sm-10">
            @Model.Salary.ToString("C") <!-- Salary formatted as currency -->
        </dd>
    </dl>

    <form asp-action="Delete" method="post" class="mt-4">
        <input type="hidden" asp-for="EmployeeId" />
        <div class="text-right">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
        </div>
    </form>
</div>

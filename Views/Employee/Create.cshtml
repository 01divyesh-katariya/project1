@model project1.Models.Employee

<h2 class="text-center my-4">Create Employee</h2>

<form asp-action="Create" class="container">
    <div class="form-group">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Position" class="form-label"></label>
        <input asp-for="Position" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Department" class="form-label"></label>
        <input asp-for="Department" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Salary" class="form-label"></label>
        <input asp-for="Salary" class="form-control" />
    </div>

    <div class="text-right">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
    </div>
</form>
